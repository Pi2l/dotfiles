background {
    monitor =
    path = screenshot
    color = rgba(25, 20, 20, 1.0)
    blur_passes = 4
}


input-field {
    monitor = 
    size = 1000%, 100%
    outline_thickness = 3
    inner_color = rgba(0, 0, 0, 0.0) # no fill
    placeholder_text = Password
    fail_text = <i>$FAIL <b>($ATTEMPTS)</b></i>
    
    invert_numlock = true

    outer_color = rgba(33ccffee) rgba(00ff99ee) 45deg
    check_color=rgba(00ff99ee) rgba(ff6633ee) 120deg
    fail_color=rgba(00ff99ee) rgba(ff6633ee) 120deg
    
    fail_timeout = 3000
    font_color = rgb(143, 143, 143)
    fade_on_empty = false
    rounding = 15

    position = 0, -20
    halign = center
    valign = center
}

label {
    monitor =
    #clock
    text = cmd[update:1000] echo "$TIME"
    color = rgba(200, 200, 200, 1.0)
    font_size = 55
    font_family = Noto Sans
    position = 0, -100
    halign = center
    valign = top
    shadow_passes = 5
    shadow_size = 10
}

label {
    monitor =
    # date
    text = cmd[update:1000] echo "<span>$(date -u +%d-%m-%Y)</span>"
    color = rgba(200, 200, 200, 1.0)
    font_size = 34
    font_family = Noto Sans
    position = 0, -210
    halign = center
    valign = top
    shadow_passes = 5
    shadow_size = 10
}

label {
    monitor =
    text = $USER
    color = rgba(200, 200, 200, 1.0)
    font_size = 20
    font_family = Fira Semibold
    position = 0, -60
    halign = center
    valign = top
    shadow_passes = 5
    shadow_size = 10
}


